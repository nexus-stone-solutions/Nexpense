{
  "name": "nexpense",
  "version": "1.0.0",
  "description": "FREE Expense Tracker",
  "private": true,
  "type": "module",
  "main": "build/electron.js",
  "homepage": ".",
  "build": {
    "appId": "com.nss.nexpense",
    "productName": "Nexpense",
    "directories": {
      "buildResources": "logos",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/electron/**/*",
      "logos/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "./logos/logo.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "./logos/logo.ico",
      "target": [
        "nsis",
        "zip"
      ],
      "defaultArch":
        "x64"
    },
    "linux": {
      "icon": "./logos/logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "scripts": {
    "electron-dev": "electron ./src/electron/electron.js",
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build && cp -r src/electron/* build/ && cp -r logos/ build/",
    "dist": "npm run build && electron-builder --mac --win --linux",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nexus-stone-solutions/Nexpense.git"
  },
  "author": "Tanner Smith <tanner.s@nexusstone.cloud>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nexus-stone-solutions/Nexpense/issues"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "electron": "^34.0.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "chart.js": "^4.4.7",
    "cra-template": "1.2.0",
    "dotenv": "^16.4.7",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.2.0",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.7"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
